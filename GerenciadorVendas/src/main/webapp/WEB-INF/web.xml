    <servlet-mapping>
        <servlet-name>RelatorioVendaServlet</servlet-name>
        <url-pattern>/RelatorioVendaServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>

    <servlet>
        <servlet-name>AlterarVendaServlet</servlet-name>
        <servlet-class>br.com.bmrt.conexaobd.servlet.AlterarVendaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VendaServlet</servlet-name>
        <url-pattern>/VendaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarVendaServlet</servlet-name>
        <url-pattern>/CadastrarVendaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExcluirVendaServlet</servlet-name>
        <url-pattern>/ExcluirVendaServlet</url-pattern>
    </servlet-mapping>
